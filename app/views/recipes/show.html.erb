<section id='recipe' class="container mx-auto px-4">
  <header class='text-center'>
    <h1 class="text-3xl font-bold my-8">Recipe <%= @recipe.id %></h1>
  </header>
  <main class='recipe'>
    <div>
      <p>Preparation time: <%= @recipe.preparation_time %></p>
      <br>
      <p>Cooking time: <%= @recipe.cooking_time %></p>
      <br>
      <p><%= @recipe.description %></p>
      <br>
    </div>
    <div >
      <p>Public <i class="fa-solid fa-toggle-on"></i></p>
    </div>
  </main>
  <div class='recipe__btn-wrap'>
    <%= link_to 'Generate shopping list', root_path, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
    <%= link_to 'Add ingredient', root_path, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
  <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
    <table class="w-full text-sm text-left bg-white border border-gray-200 rounded-md">
      <thead class="text-xs bg-gray-200 text-gray-700">
        <tr>
          <th scope="col" class="px-6 py-3 border-b">Food</th>
          <th scope="col" class="px-6 py-3 border-b">Quantity</th>
          <th scope="col" class="px-6 py-3 border-b">Value</th>
          <th scope="col" class="px-6 py-3 border-b">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @recipe.foods.each_with_index do |food, index| %>
          <tr class="<%= index.even? ? 'bg-gray-100' : 'bg-gray-50' %> border-b">
            <td class="px-6 py-4 whitespace-nowrap"><%= food.name %></td>
            <td class="px-6 py-4"><%= food.quantity %></td>
            <td class="px-6 py-4"><%= food.price %></td>
            <td class="px-6 py-4">
              <%= link_to 'Modify', edit_food_path(food), class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
              <%= button_to 'Delete', food_path(food), method: :delete, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>
